<h2 class="text-uppercase text-center">Find your rates!</h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4 col-sm-6 col-lg-offset-4 col-sm-offset-3">
      <form>
        <div class="form-group">
          <label for="sub_name">Full Name</label>
          <input type="text" class="form-control" id="sub_name" placeholder="Full name" required name="name">
        </div>

        <div class="form-group">
          <label for="sub_phone">Phone</label>
          <input type="phone" class="form-control" id="sub_phone" placeholder="Phone" required name="phone">
        </div>

        <div class="form-group">
          <label for="sub_address">Full Address</label>
          <input type="text" class="form-control" id="sub_address" placeholder="Full address" required name="address">
        </div>

        <div class="form-group">
          <label for="sub_ssn">SSN</label>
          <input type="password" class="form-control" id="sub_ssn" placeholder="SSN" required name="ssn">
        </div>

        <div class="form-group">
          <label for="sub_income">Yearly Income</label>
          <input type="decimal" class="form-control" id="sub_income" placeholder="Yearly Income" required name="income">
        </div>

        <div class="form-group">
          <label for="sub_credit_score">Credit Score</label>
          <input type="number" class="form-control" id="sub_credit_score" placeholder="Credit score" required name="credit_score">
        </div>

        <div class="form-group">
          <label for="sub_amount">Loan Amount</label>
          <input type="text" class="form-control" id="sub_amount" placeholder="Loan Amount" required name="amount">
        </div>

        <button type="submit" class="btn btn-action btn-block btn-lg">Get my rates!</button>
      </form>
    </div>
  </div>
</div>
